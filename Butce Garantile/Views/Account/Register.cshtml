@model Butce_Garantile.Models.RegisterViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = null;
}

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="page-header">
            <div class="page-breadcrumb">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <h2>Kayıt Ol</h2>

    <form asp-action="Register" method="post">
        <div class="form-group">
            <label for="FirstName">Ad</label>
            <input type="text" class="form-control" id="FirstName" name="FirstName" asp-for="FirstName" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="LastName">Soyad</label>
            <input type="text" class="form-control" id="LastName" name="LastName" asp-for="LastName" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" class="form-control" id="Email" name="Email" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Password">Şifre</label>
            <input type="password" class="form-control" id="Password" name="Password" asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Kayıt Ol</button>
    </form>

    <div class="text-center mt-3">
        <a class="btn btn-secondary" asp-controller="Account" asp-action="Login">Giriş Yap</a>
    </div>
</div>

<style>
    body {
        background-color: #f0f2f5; /* Arka plan rengi */
    }

    h2 {
        text-align: center;
        margin-bottom: 20px;
        color: #343a40; /* Başlık rengi */
        font-family: 'Arial', sans-serif;
    }

    .container {
        max-width: 450px; /* Form genişliği */
        margin: 0 auto; /* Ortala */
        padding: 30px;
        background-color: #ffffff; /* Form arka plan rengi */
        border-radius: 10px; /* Yuvarlak köşeler */
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); /* Hafif gölge */
        transition: transform 0.2s; /* Geçiş efekti */
    }

        .container:hover {
            transform: translateY(-5px); /* Hover efekti */
        }

    .form-group {
        margin-bottom: 20px; /* Alanlar arasındaki boşluk */
    }

    label {
        display: block;
        margin-bottom: 5px; /* Etiketler için alt boşluk */
        font-weight: bold; /* Kalın etiket metni */
        color: #495057; /* Etiket rengi */
    }

    input[type="email"],
    input[type="password"],
    input[type="text"] {
        width: 100%; /* Genişlik */
        padding: 12px; /* İç boşluk */
        border: 1px solid #ced4da; /* Kenarlık rengi */
        border-radius: 4px; /* Yuvarlak kenarlar */
        transition: border-color 0.3s; /* Kenar rengi geçiş efekti */
    }

        input[type="email"]:focus,
        input[type="password"]:focus,
        input[type="text"]:focus {
            border-color: #80bdff; /* Farklı kenar rengi odaklandığında */
            outline: none; /* Kenar çizgisi dışındaki kenar çizgisi */
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5); /* Kenar gölgesi */
        }

    button {
        width: 100%; /* Buton genişliği */
        padding: 12px; /* İç boşluk */
        background-color: #007bff; /* Buton rengi */
        color: white; /* Buton metni rengi */
        border: none; /* Kenar yok */
        border-radius: 4px; /* Yuvarlak kenarlar */
        cursor: pointer; /* İmleç şekli */
        font-weight: bold; /* Kalın metin */
        transition: background-color 0.3s; /* Arka plan rengi geçiş efekti */
    }

        button:hover {
            background-color: #0056b3; /* Hover durumu rengi */
        }

    a {
        color: #007bff; /* Link rengi */
        text-decoration: none; /* Alt çizgi yok */
        font-weight: bold; /* Kalın metin */
    }

        a:hover {
            text-decoration: underline; /* Hover durumu alt çizgi */
        }
</style>
