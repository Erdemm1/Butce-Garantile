@model Butce_Garantile.Models.Gider

@{
    ViewData["Title"] = "Yeni Gider Ekle";
    Layout = "_Layout";
}

<h1>Yeni Gider Ekle</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Aciklama">Açıklama</label>
        <input asp-for="Aciklama" class="form-control" />
        <span asp-validation-for="Aciklama" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Tutar">Tutar</label>
        <input asp-for="Tutar" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Tutar" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Tarih">Tarih</label>
        <input asp-for="Tarih" class="form-control" type="date" />
        <span asp-validation-for="Tarih" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GiderTuru">Gider Türü</label>
        <select asp-for="GiderTuru" class="form-control">
            <option value="">Seçiniz...</option>
            @foreach (var giderTuru in Butce_Garantile.Models.Gider.GiderTurleri)
            {
                <option value="@giderTuru">@giderTuru</option>
            }
        </select>
        <span asp-validation-for="GiderTuru" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="IsDüzenli" class="form-check-input" type="checkbox" />
        <label asp-for="IsDüzenli" class="form-check-label">Düzenli Gider Mi?</label>
    </div>

    <!-- UserId alanını gizli olarak ekliyoruz -->
    <input type="hidden" asp-for="UserId" />

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}