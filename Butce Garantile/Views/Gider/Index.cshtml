@model IEnumerable<Butce_Garantile.Models.Gider>

@{
    Layout = "_Layout"; // Bu, Views/Shared/_Layout.cshtml dosyasını bulur.
}

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="page-header">
            <div class="page-breadcrumb">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<h1>Giderler</h1>

<a asp-action="Create" class="btn btn-primary">Yeni Gider Ekle</a>

<!-- Arama Filtresi Başlangıcı -->
<form method="get" class="mb-3">
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="aciklama">Açıklama</label>
            <input type="text" class="form-control" id="aciklama" name="aciklama" value="@ViewData["Aciklama"]" />
        </div>
        <div class="form-group col-md-4">
            <label for="tarihBaslangic">Başlangıç Tarihi</label>
            <input type="date" class="form-control" id="tarihBaslangic" name="tarihBaslangic" value="@ViewData["TarihBaslangic"]" />
        </div>
        <div class="form-group col-md-4">
            <label for="tarihBitis">Bitiş Tarihi</label>
            <input type="date" class="form-control" id="tarihBitis" name="tarihBitis" value="@ViewData["TarihBitis"]" />
        </div>
        <div class="form-group col-md-4 align-self-end">
            <button type="submit" class="btn btn-success">Ara</button>
        </div>
    </div>
</form>
<!-- Arama Filtresi Bitişi -->

<table class="table">
    <thead>
        <tr>
            <th>Açıklama</th>
            <th>Tutar</th>
            <th>Tarih</th>
            <th>Gider Türü</th>
            <th>Düzenli Gider Mi?</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var gider in Model)
        {
            <tr>
                <td>@gider.Aciklama</td>
                <td>@gider.Tutar</td>
                <td>@gider.Tarih.ToShortDateString()</td>
                <td>@gider.GiderTuru</td>
                <td>@(gider.IsDüzenli ? "Evet" : "Hayır")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@gider.Id" class="btn btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@gider.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
